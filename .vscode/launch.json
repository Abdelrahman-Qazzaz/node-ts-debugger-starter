{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TS (ESM)",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--loader", "ts-node/esm", "--inspect"],
      "args": ["${workspaceFolder}/src/index.ts"],
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/**/*.ts"]
    }
  ]
}
